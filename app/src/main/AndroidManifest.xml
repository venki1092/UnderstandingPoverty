<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.venki.up">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Utilities.UpApplication"
        android:allowBackup="true"
        android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
        android:icon="@mipmap/ic_up"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name" />
        <activity android:name=".HelpingHandActivity" />
        <activity android:name=".HelpingHandPostActivity" />
        <activity android:name=".HelpingHandMyrequestsActivity" />
        <activity
            android:name=".LandingPage"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.jobs.JobsActivity"
            android:label="Jobs" />
        <activity
            android:name=".activities.housing.HousingActivity"
            android:label="Housing"></activity>
        <activity android:name=".activities.WebViewActivity" />
        <activity
            android:name=".activities.coupons.Coupons"
            android:label="Events and Coupons"></activity>
        <activity android:name=".AboutUPActivity"></activity>
    </application>

</manifest>